@model Comp7071_A2.Areas.Housing.Models.AssetDamage

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>AssetDamage</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RecordedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RecordedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FixedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FixedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Asset)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Asset.AssetType2)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Renter)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Renter.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DamageImages)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.DamageImages != null && Model.DamageImages.Count > 0)
            {
                @foreach (var damageImage in Model.DamageImages)
                {
                    var base64Photo = Convert.ToBase64String(damageImage.Photo);
                    <img src="data:image/png;base64,@base64Photo" alt="Damage Photo" width="100" />
                }
            }
            else
            {
                <span>No Photos</span>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
