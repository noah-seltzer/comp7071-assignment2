@model Comp7071_A2.Areas.Housing.Models.Asset

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Asset</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsAvailable)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsAvailable)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RentAmount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RentAmount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HousingGroup)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HousingGroup.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Renter)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Renter.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Building)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Building.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AssetDamages)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.AssetDamages != null && Model.AssetDamages.Any())
            {
                @foreach (var damage in Model.AssetDamages)
                {
                    <li>@damage.Description</li>
                }
            }
            else
            {
                @:No damages reported
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
