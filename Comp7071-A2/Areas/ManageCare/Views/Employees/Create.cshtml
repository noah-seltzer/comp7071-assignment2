@model Employee

@{
    ViewData["Title"] = "Create Employee";
}

<div class="page-header">
    <h1><i class="bi bi-person-badge"></i> Create Employee</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="EmergencyContactPhone" class="form-label"></label>
                        <input asp-for="EmergencyContactPhone" class="form-control" />
                        <span asp-validation-for="EmergencyContactPhone" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="JobTitle" class="form-label"></label>
                        <input asp-for="JobTitle" class="form-control" />
                        <span asp-validation-for="JobTitle" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label for="selectedCertifications" class="form-label">Certifications</label>
                        <select id="selectedCertifications" name="selectedCertifications" class="form-control" asp-items="ViewBag.Certifications" multiple></select>
                        <small class="form-text text-muted">Hold Ctrl/Cmd to select multiple certifications</small>
                    </div>
                    
                    <div class="btn-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Create
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 