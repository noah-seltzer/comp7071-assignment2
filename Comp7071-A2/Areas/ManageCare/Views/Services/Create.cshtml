@model Service

@{
    ViewData["Title"] = "Create Service";
}

<div class="page-header">
    <h1><i class="bi bi-tools"></i> Create Service</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter service name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter service description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Rate" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Rate" class="form-control" placeholder="0.00" />
                        </div>
                        <span asp-validation-for="Rate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="selectedCertifications" class="form-label">Required Certifications</label>
                        <select id="selectedCertifications" name="selectedCertifications" class="form-control" asp-items="ViewBag.Certifications" multiple>
                        </select>
                        <small class="form-text text-muted">Hold Ctrl/Cmd to select multiple certifications</small>
                    </div>
                    
                    <div class="btn-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Create
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 