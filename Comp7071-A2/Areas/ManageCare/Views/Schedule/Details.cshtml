@model Schedule

@{
    ViewData["Title"] = "Appointment Details";
}

<div class="page-header">
    <h1><i class="bi bi-calendar-week"></i> Appointment Details</h1>
</div>

<div class="card mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                Service
            </dt>
            <dd class="col-sm-9">
                @(Model.Service?.Name ?? "No Service")
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.StartTime)
            </dt>
            <dd class="col-sm-9">
                @Model.StartTime.ToString("g")
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.EndTime)
            </dt>
            <dd class="col-sm-9">
                @Model.EndTime.ToString("g")
            </dd>
        </dl>
    </div>
</div>
    
<div class="card mb-4">
    <div class="card-header">
        <h4 class="mb-0"><i class="bi bi-people"></i> Customers</h4>
    </div>
    <div class="card-body">
        @if (Model.Customers != null && Model.Customers.Any())
        {
            <ul class="list-group">
                @foreach (var customer in Model.Customers)
                {
                    <li class="list-group-item">@customer.Name</li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No customers scheduled.</p>
        }
    </div>
</div>
    
<div class="card mb-4">
    <div class="card-header">
        <h4 class="mb-0"><i class="bi bi-person-badge"></i> Employees</h4>
    </div>
    <div class="card-body">
        @if (Model.Employees != null && Model.Employees.Any())
        {
            <ul class="list-group">
                @foreach (var employee in Model.Employees)
                {
                    <li class="list-group-item">@employee.Name (@employee.JobTitle)</li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No employees assigned.</p>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
        <i class="bi bi-pencil"></i> Edit
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div> 